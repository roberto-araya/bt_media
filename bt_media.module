/**
 * Implements hook_entity_type_alter().
 */
function bt_media_entity_type_alter(array &$entity_types) {
    $entity_types['media_bundle']->setHandlerClass('access', 'Drupal\bt_media\MediaTypeAccessControlHandler');
}