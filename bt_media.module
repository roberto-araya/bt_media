use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function bt_media_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the bt_media module.
    case 'help.page.bt_media':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Btester Multimedia') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function bt_media_theme() {
  return [
    'bt_media' => [
      'render element' => 'children',
    ],
  ];
}


/**
 * Implements hook_menu_local_actions_alter().
 */
function bt_media_menu_local_actions_alter(&$local_actions) {
    $local_actions['media.add']['appears_on'][0] = 'page_manager.page_view_app_website_media_app_website_media-panels_variant-0';
    $local_actions['media.add']['appears_on'][1] = 'page_manager.page_view_app_website_media_app_website_media-panels_variant-1';
    $local_actions['media.add']['title'] = t('Add multimedia element');
}

